                                </div>
                            </div>
                            <form action="/search" method="get">
                                <input type="text" name="query" placeholder="Enter a keyword">
                                <button type="submit" class="btn btn-primary">Search</button>
                              </form>
                              <br>
                              <!--Get news from NewsAPI-->
                        <% articles.forEach((article) => { %>
                          <div class="categories__list__post__item">
                            <div class="row">
                              <div class="col-lg-6 col-md-6">
                                <div class="categories__post__item__pic set-bg">
                                  <img src="<%= article.urlToImage %>">
                                  <div class="post__meta">
                                    <h4><%= new Date(article.publishedAt).getDate() %></h4>
                                    <span><%= new Date(article.publishedAt).toLocaleString('default', { month: 'short' }) %></span>
                                  </div>
                                </div>
                              </div>
                              <div class="col-lg-6 col-md-6">
                                <div class="categories__post__item__text">
                                  <span class="post__label"><%= article.source.name %></span>
                                  <h3><a href="/news-detail?author=<%= article.author ? encodeURIComponent(article.author) : '' %>&title=<%= encodeURIComponent(article.title) %>"><%= article.title %></a></h3>
                                  <ul class="post__widget">
                                    <li>by <span><%= article.author %></span></li>
                                    <li>from <span><%= article.source.name %></span></li>
                                  </ul>
                                  <p><%= article.content %></p>
                                </div>
                              </div>
                            </div>
                          </div>
                        <% }) %>
